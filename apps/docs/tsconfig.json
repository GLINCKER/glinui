{
  "extends": "../../packages/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "next-themes": ["./src/lib/next-themes"],
      "@glinui/ui": ["../../packages/ui/src/index.ts"],
      "@glinui/ui/*": ["../../packages/ui/src/*"],
      "@glinui/registry": ["../../packages/registry/src/index.ts"],
      "@glinui/tokens": ["../../packages/tokens/src/index.ts"],
      "@glinui/motion": ["../../packages/motion/src/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "content/**/*.mdx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
